<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="loginViewModel"
            type="com.example.wonderfulchat.viewmodel.LoginViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:background="@color/gray"
            android:layout_marginTop="40dp"/>

        <com.example.wonderfulchat.customview.DefuEditText
            android:id="@+id/account"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:background="@drawable/rect_blank_gray"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:drawableRight="@mipmap/icon_cross"
            android:drawableLeft="@mipmap/user_img"
            android:drawablePadding="5dp"
            android:text="@{loginViewModel.account}"
            app:rightClear="true" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:background="@drawable/rect_blank_gray"
            android:layout_marginTop="20dp"
            android:paddingRight="10dp">

            <com.example.wonderfulchat.customview.DefuEditText
                android:id="@+id/password"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:drawableRight="@mipmap/icon_cross"
                android:drawableLeft="@mipmap/pwd_img"
                android:drawablePadding="5dp"
                android:text="@{loginViewModel.password}"
                android:inputType="@{loginViewModel.showHide}"
                app:rightClear="true" />

            <ImageView
                android:id="@+id/pass_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/icon_eye_close"
                android:onClick="@{loginViewModel.passwordShow}"/>
        </LinearLayout>

        <CheckBox
            android:id="@+id/pass_remember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:layout_marginRight="57dp"
            android:text="记住账号密码"
            android:onCheckedChanged="@{loginViewModel.checkBoxCheckedChanged}"
            android:checked="@{loginViewModel.ischecked}"/>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/login"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/blue"
                android:textColor="@color/white"
                android:text="登录"
                android:onClick="@{loginViewModel.login}"/>

            <Button
                android:id="@+id/register"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/blue"
                android:layout_marginLeft="1dp"
                android:textColor="@color/white"
                android:text="注册"
                android:onClick="@{loginViewModel.register}"/>

        </LinearLayout>

    </LinearLayout>

</layout>